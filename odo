  <script>
    // 年表示
    document.getElementById('year').textContent = new Date().getFullYear();

    // モバイルメニュー
    const _menuBtn = document.getElementById('menuBtn');
    if (_menuBtn) {
      _menuBtn.addEventListener('click', () => {
        const _mobile = document.getElementById('mobileNav');
        if (_mobile) _mobile.classList.toggle('hidden');
      });
    }

    // 予定カード
    const schedule = [
      {date:'10/05 (日) 09:00', type:'練習', title:'基礎＋実戦形式', place:'小戸第二球場'},
      {date:'10/12 (日) 13:00', type:'練習試合', title:'vs △△クラブ', place:'△△河川敷グラウンド'},
      {date:'10/19 (日) 09:00', type:'リーグ戦', title:'第3節', place:'県営□□球場'},
      {date:'10/26 (日) 09:00', type:'練習', title:'守備・走塁強化', place:'小戸第二球場'}
    ];
    const wrap = document.getElementById('scheduleWrap');
    if (wrap) {
      schedule.forEach(r => {
        const card = document.createElement('article');
        card.className = 'border border-white/10 rounded-2xl p-5';
        card.innerHTML = `<p class="text-xs text-slate-400">${r.date}</p>`+
          `<h3 class="font-semibold mt-1">${r.type}｜${r.title}</h3>`+
          `<p class="text-sm text-slate-300">${r.place}</p>`;
        wrap.appendChild(card);
      });
    }
  </script>

